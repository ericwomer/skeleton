{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Configure",
            "type": "shell",
            "command": "meson build"
        },
        {
            "label": "Reconfigure",
            "type": "shell",
            "command": "meson --reconfigure build"
        },
        {
            "label": "Build",
            "type": "shell",
            "command": "ninja -C build",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Clean",
            "type": "shell",
            "command": "ninja -C build clean"
        }
    ]
}